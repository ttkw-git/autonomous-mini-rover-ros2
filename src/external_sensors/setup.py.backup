        (os.path.join('share', package_name, 'config'), glob('config/*.yaml')),
    ],
    install_requires=['setuptools'],
    zip_safe=True,
    maintainer='Rover Team',
    maintainer_email='rover@example.com',
    description='External GPS and IMU sensor publishers',
    license='MIT',
    tests_require=['pytest'],
    entry_points={
        'console_scripts': [
            'gps_publisher = external_sensors.gps_publisher:main',
            'external_imu_publisher = external_sensors.external_imu_publisher:main',
